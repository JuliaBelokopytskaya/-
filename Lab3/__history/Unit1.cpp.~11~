//		}
//		catch ( EInvalidOp &e)
//		{
//			ShowMessage("Необходимо задать величину сопротивлений");
//			return;
//		}
	   Label3->Caption = FloatToStrF(n,ffGeneral,6,2) + " без рекурсии";
	}
//	Label4->Caption = FloatToStrF(r,ffGeneral,6,2) + " Ом";
}
